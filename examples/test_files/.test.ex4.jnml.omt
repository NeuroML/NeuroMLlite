# Script for running automated tests on OSB using Travis-CI, see https://github.com/OpenSourceBrain/osb-model-validation

target: ../LEMS_SimExample4.xml 
engine: jNeuroML
mep: .test.ex4.mep
experiments:
  v0:
    observables:
      spike times:
        file: 
          path: ../SimExample4.pop1.v.dat
          columns: [0,1]
          scaling: [1000, 1000]
        spike detection: 
          method: threshold
          threshold: -64
        tolerance: 0.

  v1:
    observables:
      spike times:
        file: 
          path: ../SimExample4.pop2.v.dat
          columns: [0,1]
          scaling: [1000, 1000]
        spike detection: 
          method: threshold
          threshold: -70.4
        tolerance: 0.
